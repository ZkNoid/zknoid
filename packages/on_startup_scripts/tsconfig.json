{
    "compilerOptions": {
        "outDir": "./dist",
        "strictNullChecks": true,
        "lib": ["es2020", "dom"],
        "target": "ES2020",
        "module": "ES2022",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "alwaysStrict": true,
        "declarationMap": true,
        "strictFunctionTypes": true,
        "baseUrl": "."
    },
    "include": ["./scripts/**/*"],
    "exclude": ["jest.config.cjs"]
}
